<h1>Edit this co. </h1>
<%= form_tag "/companies/#{@company.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @company.company_name %>
  </div>
  <div>
    <%= label_tag :catchphrase %>
    <%= text_field_tag :catchphrase, @company.catchphrase %>
  </div>
  <div>
    <%= label_tag :buzzword %>
    <%= text_field_tag :buzzword, @company.buzzword %>
  </div>
  <div>
    <%= label_tag :bs %>
    <%= text_field_tag :bs, @company.bullshiza %>
  </div>
  <div>
    <%= label_tag :hipster %>
    <%= text_field_tag :hipster, @company.hipster_bob_says %>
  </div>
  <%= submit_tag 'Edit dis Company' %>
<% end %>